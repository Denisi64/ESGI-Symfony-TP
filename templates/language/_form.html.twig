<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Streemi - Language</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<div class="max-w-lg mx-auto bg-white p-6 rounded-lg shadow-md">
    <h1 class="text-2xl font-semibold text-gray-700 mb-6">Language Form</h1>

    {{ form_start(form) }}

    <div class="space-y-4">
        <!-- Loop through all the form fields with form_widget() and style them with Tailwind -->
        {{ form_row(form.name, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-600'}}) }}
        {{ form_row(form.code, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-600'}}) }}
    </div>

    <div class="mt-6">
        <button type="submit" class="w-full bg-blue-600 text-white px-4 py-2 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-600">
            {{ button_label|default('Save') }}
        </button>
    </div>

    {{ form_end(form) }}
</div>
